.panel.panel-default(ng-repeat="task in tasks")
  .panel-heading {{task.name}}
  .panel-body
    accordion
      accordion-group(ng-repeat="child in task.children")
        accordion-heading
          | {{child.name}}
        form.task-actions
          label(for="task") Promote to task
          input(name="task" type="checkbox" ng-model="query.task" ng-change="PromoteToTask(query)")
          label(for="parent") Add to task
          select(name="parent" ng-model="query.parent" class="form-control" ng-options="item as item.name for item in tasks" ng-change="addToTask(query)")
